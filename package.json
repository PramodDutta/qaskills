{
  "name": "qaskills",
  "version": "0.1.0",
  "private": true,
  "description": "QA Skills Directory for AI Coding Agents",
  "author": "The Testing Academy <hello@thetestingacademy.com>",
  "license": "MIT",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:push": "pnpm --filter @qaskills/web db:push",
    "db:migrate": "pnpm --filter @qaskills/web db:migrate",
    "db:seed": "pnpm --filter @qaskills/web db:seed",
    "db:studio": "pnpm --filter @qaskills/web db:studio"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "next": "^15.5.12",
    "prettier": "^3.4.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
